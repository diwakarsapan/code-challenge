<div class="container py-5">
  <style>
    .bg-success {
      background-color: <%= @company.brand_color %> !important;
    }
  </style>
  <h3>Company</h3>
  <div class="row">
    <div class="col">
      <%= link_to "< Companies", companies_path %>
    </div>
    <div class="col text-right">
      <%= link_to "Edit", edit_company_path %>
      <%= link_to "Delete", company_path, data: { remote: true, method: :delete, confirm: "Are you sure?" } %>
    </div>
  </div>

  <%= render "companies/page", :company => @company %>
</div>
